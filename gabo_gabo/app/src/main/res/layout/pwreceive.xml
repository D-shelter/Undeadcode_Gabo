<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1ebd9"
    android:orientation="vertical"
    tools:context=".pwReceive">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="#f1ebd9"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_receive_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonundersolid"
                android:text="FIND ACCOUNT"
                android:textColor="#808080"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_receive_Pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonundersolid2"
                android:text="Find PW"
                android:textColor="#0d6aba"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_receive_Restart"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center|left"
                android:text="비밀번호 재설정"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edt_change_pw1"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/drawableright1"
                android:drawablePadding="10dp"

                android:ems="10"
                android:gravity="center|left"
                android:hint="New Password"
                android:inputType="textPersonName"
                android:textColorHint="#8aaa"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/tv_receive_Name"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center|left"
                android:text="8~16자 영문 대소문자, 숫자, 특수문자를 사용하세요"
                android:textColor="#0d6aba"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_change_pw2"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/drawableright2"
                android:ems="10"
                android:gravity="center|left"
                android:hint="Password Check"
                android:inputType="textPersonName"
                android:textColorHint="#8aaa"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_receive_Password_check"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center|left"
                android:text="비밀번호 재확인"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_change_pw"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonsolid2"
                android:text="CHANGE PASSWORD"
                android:textColor="#0d6aba"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#f1ebd9"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/findaccount"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="125dp"
                    android:layout_weight="1"
                    android:background="@drawable/findaccount2"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>